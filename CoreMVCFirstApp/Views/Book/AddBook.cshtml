
@{
    ViewData["Title"] = "AddBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model BookModel
<div class="container">
    <h3 class="display-4">Add new book</h3>
    @if (ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Congratulations!</strong> You add new book successfully. <br>
            Click <a asp-controller="book" asp-action="GetBook" asp-route-id="@ViewBag.BookId">here</a> to view the book details.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    }
    <form method="post">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Language"></label>
            <select asp-for="Language" class="form-control" asp-items="ViewBag.Languages">
               <option value="">Please chhose your book language</option>
            </select>
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Category"></label>
            <select asp-for="Category" class="form-control">
                <option value="">Please choose your book category</option>
                <option>Programming</option>
                <option>Database</option>
                <option>Framework</option>
            </select>
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TotalPage"></label>
            <input asp-for="TotalPage" class="form-control" />
            <span asp-validation-for="TotalPage" class="text-danger"></span>
        </div>
        <div class="form-group">
           <input type="submit" value="Add Book" class="btn btn-info mt-2" />
        </div>
    </form>
</div>

